<%#= turbo_frame_tag 'image_gallery' do %>



  <!-- <form action="/show_photo_gallery?s=1&w=verdant|ski|smiling" data-turbo-frame="test">
    Submitting form will replace the test frame.
    <input type="submit">
  </form> -->

  <ul class="random_words_list">
    <% for i in 0..2 %>
      <!-- MOLTO MALE --> 
      <% selected = @selected %>
      <% words_array = @words_array %>
      <% photourl = @photourl %>
      <% if selected.to_i == i %>
        <%= content_tag :li, class: ["random_word","selected"] do -%>
          <%= link_to words_array[i].value, "/show_photo_gallery?s=#{i}&w=#{words_array[0].value}|#{words_array[1].value}|#{words_array[2].value}", {remote: true, id: "new"} %>
        <% end -%>
      <% else %>
        <%= content_tag :li, class: "random_word" do -%>
          <%= link_to words_array[i].value, "/show_photo_gallery?s=#{i}&w=#{words_array[0].value}|#{words_array[1].value}|#{words_array[2].value}", { method: "POST" } %>
        <% end -%>
      <% end %>
    <% end %>
  </ul>
  <div id="photo-gallery">
    <% photo_url_index = selected.to_i*40 %>
    <% for i in 0..7 do %>
      <%= content_tag :div, class: ["carousel"], tabindex: "-1" do -%>
       <% 5.times do %>
         <%= image_tag photourl[photo_url_index.to_i] , :class => 'cell' %>
         <% photo_url_index += 1 %>
       <% end %>
      <% end -%>
    <% end %>
  </div>
<%# end %>
