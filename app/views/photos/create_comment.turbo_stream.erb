<% if @comment.errors.any? %>
  <%= turbo_stream.replace "add_comment_form" do %>
    <% render "add_comment_form" %>
  <% end %>
<% else %>
  <%= turbo_stream.prepend "comments_list", @comment %>
  <% @comment = Comment.new %>
  <%= turbo_stream.replace "add_comment_form" do %>
    <%= render partial: "add_comment_form" %>
  <% end %>
<% end %>
