<h2>Add a comment</h2>

<%= form_for :comment, url: comments_path do |f| %>
  <p>
      <%= f.label :name %><br>
      <%= f.text_field(:name) %>
  </p>
  <p>
      <%= f.label :email %><br>
      <%= f.text_field(:email) %>
  </p>
  <p>
      <%= f.label :body %><br>
      <%= f.text_area(:body) %>
  </p>
  <p>
      <%= f.submit %>
  </p>
<% end %>
<% @comments.each do |comment| %>
  <h3><%= comment.name %></h3>
  <h3><%= comment.email %></h3>
  <p><%= comment.body %></p>
<%end %>
