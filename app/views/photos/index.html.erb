<h1>Photo Blog</h1>


<p>  <%= @word %></p>

<ul class="random_words_list">
  <% @words_array.each do |word| %>
    <%= content_tag :li, class: "random_word" do -%>
    <!-- TODO: should I move this "logic" somewhere else? -->
      <%= link_to word, url_for(word: word, words_array: @words_array) %>
    <% end -%>
  <% end %>
</ul>


