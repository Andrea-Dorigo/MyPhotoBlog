<h1>Photo Blog</h1>
<div id="photo-gallery">

<!--could I use "each"? Is it better? -->
<!--maybe a 2-dimensional array can make loops clearer -->
  <% for i in 0..7 do %>
    <%= content_tag :div, class: ["js-flickity", "carousel"], data: { flickity:  { "autoPlay": 4000,
                 "wrapAround": true,
                 "draggable": false
               } } do -%>
      <% if (i<3) %>
        <% for j in 0..4 do %>
          <%= image_tag @photourl[j] , :class => 'carousel-cell' %>
        <% end %>
      <% end %>
      <% if (i>2 && i<5) %>
        <% for j in 5..9 do %>
          <%= image_tag @photourl[j] , :class => 'carousel-cell' %>
        <% end %>
      <% end %>
      <% if (i>4 && i<7) %>
        <% for j in 10..14 do %>
          <%= image_tag @photourl[j] , :class => 'carousel-cell' %>
        <% end %>
      <% end %>
      <% if (i==7) %>
        <% for j in 0..4 do %>
          <%= image_tag @photourl[j] , :class => 'carousel-cell' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

</div>


<!--
:data-flickity => '{
  "autoPlay": 4000,
  "wrapAround": true,
  "draggable": false
  }'  -->
